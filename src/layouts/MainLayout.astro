---
import '../styles/global.css'
const { title = 'Diego Palencia Martinez - Portfolio' } = Astro.props
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=1" />
    <title>{title}</title>
  </head>

  <body class="bg-[#050509] text-gray-200 font-sans overflow-x-hidden">
    <div class="grid-bg"></div>

    <svg class="fixed inset-0 z-3 opacity-50 pointer-events-none">
      <defs>
        <filter id="warp">
          <feTurbulence type="fractalNoise" baseFrequency="0.01" numOctaves="3" seed="2" />
          <feDisplacementMap in="SourceGraphic" scale="40" xChannelSelector="R" yChannelSelector="G" />
        </filter>
      </defs>
      <rect width="100%" height="100%" fill="#110" filter="url(#warp)" />
    </svg>

    <slot name="navbar" />
    <slot />
  </body>
</html>
